<Window x:Class="PlacesWorthVisiting.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlacesWorthVisiting"
        mc:Ignorable="d"
        Title="GrandCanyon" Height="500" Width="800">
    <Grid>
        <Grid Background="#FF091C51">

            <!-- Resim yerleştirilecek alan -->
            <Border Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Height="300">
                <Image Source="/Images/grandcanyon.jpg" Stretch="UniformToFill"/>
            </Border>

            <!-- Yer adı -->
            <TextBlock Text="Grand Canyon, USA" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top"/>

            <!-- Yer açıklaması -->
            <TextBlock Text="The Grand Canyon, located in Arizona, USA, is a colossal natural wonder carved by the Colorado River over millions of years, showcasing breathtaking geological formations and layers of history. Its vastness and beauty attract millions of visitors annually, offering awe-inspiring vistas and opportunities for outdoor exploration and adventure." Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,385,0,0" FontSize="14" FontFamily="Bookman Old Style" TextAlignment="Center" Width="710"/>

            <!-- Menu butonu -->
            <Button Content="Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="40" Margin="20,20,0,0" Click="MenuButton_Click"/>
        </Grid>
    </Grid>
</Window>
