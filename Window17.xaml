<Window x:Class="PlacesWorthVisiting.Window17"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlacesWorthVisiting"
        mc:Ignorable="d"
        Title="Istanbul" Height="500" Width="800">
    <Grid>
        <Grid Background="#FF091C51">

            <Border Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Height="300">
                <Image Source="/images/istanbulfood.jpg" Stretch="UniformToFill"/>
            </Border>


            <TextBlock Text="Istanbul" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top"/>


            <TextBlock Text="Istanbul's cuisine is a delightful fusion of flavors influenced by its rich history and diverse cultural heritage. From savory kebabs and hearty stews to delectable sweets like baklava and Turkish delight, the city offers a tantalizing culinary journey through its bustling markets and traditional eateries, showcasing the vibrant and delicious tapestry of Turkish gastronomy." Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,385,0,0" FontSize="14" FontFamily="Bookman Old Style" TextAlignment="Center" Width="710"/>

            <Button Content="Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="40" Margin="20,20,0,0" Click="MenuButton_Click"/>
        </Grid>
    </Grid>
</Window>
