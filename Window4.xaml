<Window x:Class="PlacesWorthVisiting.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlacesWorthVisiting"
        mc:Ignorable="d"
        Title="Pamukkale" Height="500" Width="800">
    <Grid>
        <Grid Background="#FF091C51">

            <!-- Resim yerleştirilecek alan -->
            <Border Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Height="300">
                <Image Source="/Images/pamukkale.jpg" Stretch="UniformToFill"/>
            </Border>

            <!-- Yer adı -->
            <TextBlock Text="Pamukkale, Türkiye" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top"/>

            <!-- Yer açıklaması -->
            <TextBlock Text="Pamukkale, located in Turkey, is famous for its stunning white terraces formed by mineral-rich thermal waters cascading down the mountainside. Visitors can relax in the rejuvenating thermal pools while marveling at the surreal landscape, blending natural beauty with ancient history at the nearby Hierapolis archaeological site." Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,385,0,0" FontSize="14" FontFamily="Bookman Old Style" TextAlignment="Center" Width="710"/>

            <!-- Menu butonu -->
            <Button Content="Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="40" Margin="20,20,0,0" Click="MenuButton_Click"/>
        </Grid>
    </Grid>
</Window>
