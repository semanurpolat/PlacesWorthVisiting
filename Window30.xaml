<Window x:Class="PlacesWorthVisiting.Window30"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlacesWorthVisiting"
        mc:Ignorable="d"
        Title="Bahamas" Height="500" Width="800">
    <Grid>
        <Grid Background="#FF091C51">

            <Border Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Height="300">
                <Image Source="/images/bahamas.jpg" Stretch="UniformToFill"/>
            </Border>


            <TextBlock Text="Bahamas" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top"/>


            <TextBlock Text="The Bahamas, an archipelago in the Atlantic Ocean, is famous for its pristine beaches, turquoise waters, and vibrant marine life. With its luxury resorts, water sports, and lively culture, the Bahamas offers a tropical escape where visitors can unwind in paradise and explore the beauty of island life." Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,385,0,0" FontSize="14" FontFamily="Bookman Old Style" TextAlignment="Center" Width="710"/>

            <Button Content="Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="40" Margin="20,20,0,0" Click="MenuButton_Click"/>
        </Grid>
    </Grid>
</Window>
