<Window x:Class="PlacesWorthVisiting.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlacesWorthVisiting"
        mc:Ignorable="d"
        Title="Fjords" Height="500" Width="800">
    <Grid>
        <Grid Background="#FF091C51">

            <!-- Resim yerleştirilecek alan -->
            <Border Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Height="300">
                <Image Source="/images/fjords.jpg" Stretch="UniformToFill"/>
            </Border>

            <!-- Yer adı -->
            <TextBlock Text="Fjords, Norway" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top"/>

            <!-- Yer açıklaması -->
            <TextBlock Text="The Norwegian fjords are breathtaking natural wonders characterized by steep cliffs, crystal-clear waters, and picturesque villages nestled along their shores. Visitors can cruise through these majestic landscapes, immersing themselves in the serene beauty of Norway's glacier-carved coastal scenery." Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,385,0,0" FontSize="14" FontFamily="Bookman Old Style" TextAlignment="Center" Width="710"/>

            <!-- Menu butonu -->
            <Button Content="Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="40" Margin="20,20,0,0" Click="MenuButton_Click"/>
        </Grid>
    </Grid>
</Window>
