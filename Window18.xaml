<Window x:Class="PlacesWorthVisiting.Window18"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlacesWorthVisiting"
        mc:Ignorable="d"
        Title="Napoli" Height="500" Width="800">
    <Grid>
        <Grid Background="#FF091C51">

            <Border Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Height="300">
                <Image Source="/images/napolifood.jpg" Stretch="UniformToFill"/>
            </Border>


            <TextBlock Text="Napoli" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top"/>


            <TextBlock Text="Napoli, Italy, is renowned for its iconic cuisine, including the world-famous Neapolitan pizza, which features a thin, chewy crust topped with fresh tomatoes, mozzarella cheese, and basil. Visitors can also indulge in local specialties like spaghetti alla puttanesca and sfogliatella pastries, experiencing the rich culinary tradition of this vibrant city by the sea." Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,385,0,0" FontSize="14" FontFamily="Bookman Old Style" TextAlignment="Center" Width="710"/>

            <Button Content="Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="40" Margin="20,20,0,0" Click="MenuButton_Click"/>
        </Grid>
    </Grid>
</Window>
