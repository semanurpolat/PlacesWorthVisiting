<Window x:Class="PlacesWorthVisiting.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlacesWorthVisiting"
        mc:Ignorable="d"
        Title="Amazon" Height="500" Width="800">
    <Grid>
        <Grid Background="#FF091C51">

           
            <Border Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Height="300">
                <Image Source="pack://application:,,,/Images/amazon.jpg" Stretch="UniformToFill"/>
            </Border>

            <!-- Yer adı -->
            <TextBlock Text="Amazon Forests, Brazil" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top"/>

            <!-- Yer açıklaması -->
            <TextBlock Text="The Amazon rainforest, often called the 'lungs of the world' is the world's largest tropical rainforest, covering over 5.5 million square kilometers across nine countries in South America. It is renowned for its vast biodiversity, including millions of species of insects, plants, and animals, many of which are not found anywhere else in the world. " Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,385,0,0" FontSize="14" FontFamily="Bookman Old Style" TextAlignment="Center" Width="710"/>

            <!-- Menu butonu -->
            <Button Content="Menu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="40" Margin="20,20,0,0" Click="MenuButton_Click"/>
        </Grid>
    </Grid>
</Window>
